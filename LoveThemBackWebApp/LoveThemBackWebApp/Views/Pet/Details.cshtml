@model dynamic

@{
  ViewData["Title"] = "Details";
}

@{
  Layout = "_Layout2";
}

@{
  string[] image = Model.GetPet.Photos.Split(",");
  Random rand = new Random();
}
@await Html.PartialAsync("_NAVPartial", (string)Model.User.Username)


<section class="polaroid-look">
  <img src="@image[rand.Next(0, image.Length)]" />
  <div>
    <h3>@Model.GetPet.Name</h3>
    <p>@Model.GetPet.Animal</p>
    <p>@Model.GetPet.Description</p>
  </div>
</section>

<form asp-controller="Pet" asp-action="Index">
  <p class="create">
    <input type="hidden" name="SearchString" value="@Model.Search">
    <input type="submit" value="Back to List" />
  </p>
</form>
<form asp-controller="Pet" asp-action="AddFavorites">
  <p class="create">
    <input type="hidden" name="userID" value="@Model.User.UserID">
    <input type="hidden" name="petID" value="@Model.GetPet.PetID">
    <input type="submit" value="Add to Favorites" />
  </p>
</form>

<section class="review">

  <form method="get">
    <input type="hidden" name="PetID" value="@Model.GetPet.PetID" />

    <input type="submit" asp-action="Review" value="Add A Review" />
  </form>

  <h2>Reviews</h2>
  @if (Model.GetPet.Review != null)
  {
    int count = 0;
    @foreach (var review in Model.GetPet.Review)
    {
      <div class="review-card">
        <h3>@Model.ReviewUser[count].Username Says:</h3>

        @if (review.Affectionate == true)
        {
          <p>@Model.GetPet.Name is Affectionate!</p>
        }
        @if (review.Friendly == true)
        {
          <p>@Model.GetPet.Name is Friendly!</p>
        }
        @if (review.HighEnergy == true)
        {
          <p>@Model.GetPet.Name has High Energy!</p>
        }
        @if (review.Healthy == true)
        {
          <p>@Model.GetPet.Name is Healthy!</p>
        }
        @if (review.Intelligent == true)
        {
          <p>@Model.GetPet.Name is Intelligent</p>
        }
        @if (review.Cheery == true)
        {
          <p>@Model.GetPet.Name is Cheery!</p>
        }
        @if (review.Playful == true)
        {
          <p>@Model.GetPet.Name is Playful!</p>
        }
        <h4>Other Observations:</h4>

        <p>@review.Impression</p>
      </div>
      count++;
    }
  }
</section>